{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
